<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemInfoFragment" >

    <ImageView
        android:id="@+id/imageViewItem"
        android:layout_width="323dp"
        android:layout_height="323dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/textViewItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxWidth="323dp"
        android:singleLine="false"
        android:text="name"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewItem" />

    <TextView
        android:id="@+id/textViewItemLot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxWidth="323dp"
        android:singleLine="false"
        android:text="lot#"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/textViewItemName"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemName" />

    <TextView
        android:id="@+id/textViewItemCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxWidth="323dp"
        android:singleLine="false"
        android:text="category"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/textViewItemLot"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemLot" />

    <TextView
        android:id="@+id/textViewItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxWidth="323dp"
        android:singleLine="false"
        android:text="description"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="@+id/textViewItemCategory"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemCategory" />

    <Button
        android:id="@+id/buttonItemBack"
        android:layout_width="84dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewItemDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>